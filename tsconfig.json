{
    "compilerOptions": {
        "rootDirs": ["src", "stories"],
        "removeComments": true,
        "allowUmdGlobalAccess": true,
        "noImplicitAny": true,

        "target": "esnext",
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "preserveConstEnums": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": false,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "sourceMap": true,
        "allowJs": true,
        "jsx": "preserve",
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "noResolve": false,
        "keyofStringsOnly": true,
        "baseUrl": "./src",
        "paths": {
            "~/*": [
                "*"
            ],
        },
    },
    "typeRoots": [
        "node_modules/@types",
        "src/@type"
    ],
    "exclude": [
        "node_modules",
        "build",
        "scripts",
        "acceptance-tests",
        "webpack",
        "jest",
        "src/setupTests.ts",
        "./node_modules/**/*"
    ],
    "include": [
        "./src/**/*",
        "@type"
    ]
}