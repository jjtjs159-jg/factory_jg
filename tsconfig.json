{
    "compilerOptions": {
        "rootDirs": ["src", "stories"],
        "target": "es6",
        "module": "esnext",
        "moduleResolution": "node",
        "strictNullChecks": true,
        "allowUmdGlobalAccess": true,
        "noResolve": false,
        "noImplicitAny": false,
        "removeComments": true,
        "sourceMap": true,
        "allowJs": true,
        "jsx": "preserve",
        "allowSyntheticDefaultImports": true,
        "keyofStringsOnly": true,
        "baseUrl": "./src",
        "paths": {
            "~/*": [
                "*"
            ],
        },
    },
    "typeRoots": [
        "node_modules/@types",
        "src/@type"
    ],
    "exclude": [
        "node_modules",
        "build",
        "scripts",
        "acceptance-tests",
        "webpack",
        "jest",
        "src/setupTests.ts",
        "./node_modules/**/*"
    ],
    "include": [
        "./src/**/*",
        "@type"
    ]
}